{% extends 'base.html.twig' %}

{% block title %}Administration des plats{%endblock %} 

{% block stylesheets %}
  {{ encore_entry_link_tags('admin')}}
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('admin')}}
{% endblock %}


{% block body %}
<div class="container dashboard">
  <h1>Liste des images</h1>
  <div class="row grid">
    {% include "_partials/_adminNav.html.twig" %}
    <main class="col-md-9 border border-light bg-white p-2">
      
      <div class="container">
        <div class="row">
            {% for image in images %} 
          <div class="col-3 d-flex flex-column">
            <h6 class="text-center"> {{image.name}} </h6>
            <img src="{{asset('assets/uploads/' ~ image.imageFilename )}}" class="img-thumbnail h-50 object-fit-cover border rounded" alt="{{image.imageFilename}}">
            <a class="btn btn-danger btn-action" href="{{path('admin_gallery_delete', {id: image.id})}}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce plat ?')">Supprimer</a>
          </div>
        {% endfor %}
        </div>
      </div>
      </div>
    </main>
  </div>
</div>
{% endblock %}

    {{ form_row(MenuForm.name, { label: "Nom du menu" }) }}
    {{ form_row(MenuForm.description, { label: "description" }) }}
  <div class="row entries">
    <div class="col">
      {{ form_row(MenuForm.entries1, { label: "Entr√©e" }) }}
    </div>
    <div class="col">
      {{ form_row(MenuForm.entries2, { label: 'facultatif' }) }}
    </div>
  </div>

  <div class="row dishes">
    <div class="col">
      {{ form_row(MenuForm.dishe1, { label: "Plat" }) }}
